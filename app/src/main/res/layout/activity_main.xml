<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="278sp"
        android:layout_height="66sp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409sp"
        android:layout_height="591sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_text"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/button_cencel"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="14sp"
            android:layout_marginTop="56sp"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="56sp"
            android:text="Button"
            app:layout_constraintStart_toEndOf="@+id/button_cencel"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="56sp"
            android:text="Button"
            app:layout_constraintStart_toEndOf="@+id/button_back"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="56sp"
            android:layout_marginEnd="14sp"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toEndOf="@+id/button_percent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="14sp"
            android:layout_marginTop="20sp"
            android:text="Button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_cencel" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            app:layout_constraintStart_toEndOf="@+id/button_7"
            app:layout_constraintTop_toBottomOf="@+id/button_back" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            app:layout_constraintStart_toEndOf="@+id/button_8"
            app:layout_constraintTop_toBottomOf="@+id/button_percent" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="14sp"
            app:layout_constraintStart_toEndOf="@+id/button_9"
            app:layout_constraintTop_toBottomOf="@+id/button_division"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginStart="14sp"
            android:layout_marginTop="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_7" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>